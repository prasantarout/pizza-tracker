<section class="pizza py-16 ">
    <div class="container mx-auto flex items-center justify-between ">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry ?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't Wait !</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"><a href="/">Order Now</a></button>
        </div>
        <div class="w-1/2">
            <img src="/images/hero-pizza.png"  alt="hero">
        </div>
    </div>

</section>
<!-- end section pizza -->
<!-- menu section -->
<section class="item bg-blue-100">
<div id="menu-item"class="container menu mx-auto py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">All pizzas</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
    <% pizzas.forEach(function(pizzas){%>
        <div class="w-full md:w-64">
            <img class="h-40 mb--4 mx-auto"src="/images/<%= pizzas.image%>" alt="pizza">
            <div class="text-center ">
                <h2 class="mb-4 text-lg font-bold"><%= pizzas.name%></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizzas.size%></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= pizzas.price%></span>
                    <button data-pizzas="<%=JSON.stringify(pizzas) %>"class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4 ">Add</span>
                    </button>
                </div>
            </div>
        </div>
   <% })%>


</div>
</section>

<!-- client section -->
