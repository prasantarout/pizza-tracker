<section class="status">
    <div class="container mx-auto mb-16">
        <div class=" status-box lg:w-2/3 w-full mx-auto">
        <div class="flex items-center justify-between mb-12">
            <h1 class=" text-sm md:text-xl font-bold ">Track delivery status</h1>
            <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-sm md:text-xl"><%= order._id %></h6>
       <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
       
        </div>
        <ul>
            <li class="status-line md:text-xl text-sm pb-16 " data-status="order_placed"><span>Order Placed</span></li>
            <li class="status-line text-sm md:text-xl pb-16 " data-status="confirmed"><span>Order confirmation</span></li>
            <li class="status-line text-sm md:text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
            <li class="status-line text-sm md:text-xl pb-16" data-status="delivered"><span>Out for Delivery</span></li>
            <li class="status-line text-sm md:text-xl " data-status="completed"><span>Completed</span></li>
        </ul>
        </div>
    </div>

</section>
